@require 'styles/index.styl'

.logo
  display: block
  width: 31px
  height: 18px
  background: url(../images/slink-logo.svg)
  background-size: 31px 18px
  position: absolute
  left: 50%
  top: 17px
  margin-left: -65px

#select-folder
  position: relative
  transition all 0.25s
  padding: 15px 15px
  width 100%
  text-align: left

  .icon
    background: $black
    position: absolute
    top: 0
    left: 0
    width: 50px
    height: 49px
    color: #eee
    text-align: center
    line-height: 49px
    font-size: 20px

  &:hover
    background $black

  .context
    color: #999
    margin-left: 45px

.sync-indicator
  display inline-block
  padding-left 28px
  margin-top 3px

.sync-indicator .icon
  position absolute
  left 10px

#packageList
  .list-group-item
    padding-left: 50px

    &.processing .icon,
    &.active.processing .icon
      width auto
      height auto
      border-radius 0
      border none
      position absolute
      top 12px
      left 14px
      transform-origin 50% 50%
      animation spin 1s infinite linear
      font-size 25px
      color #FFBD2E

      &:before
        content '\e891'
        position relative
        display inline-block
        font-family "photon-entypo"
        speak none
        font-size 100%
        font-style normal
        font-weight normal
        font-variant normal
        text-transform none
        line-height 1
        -webkit-font-smoothing antialiased

.list-group-item .icon
  position absolute
  top 22px
  left 14px
  width 20px
  height 20px
  border-radius 10px
  border 2px solid $blue

.list-group-item.active .icon
  border 2px solid $green

.list-group-item.innactive .icon
  border 2px solid #ccc
