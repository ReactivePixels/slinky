extends: defaults/configurations/google

env:
  browser: true
  jasmine: true
  node: true
  commonjs: true

  es6: true
  mocha: true

confit-globals: &confit-globals

ecmaFeatures:
  modules: true

globals:
  <<: *confit-globals

rules:
  max-len:
    - 2       # Warning
    - 200     # Line Length

  dot-location:
    - 1       #error
    - property

  no-unused-vars:
    - 1

  semi:
    - 0

  object-curly-spacing:
    - 0

  space-before-function-paren:
    - 0