@require 'variables.styl'

.alert
  position: absolute
  text-align: center
  font-size: 14px
  padding: 40px 10px
  width: 100%

#select-folder
  height: 50px
  position: relative
  padding: 15px 15px
  width 100%
  text-align: left

  .icon
    transition all 0.25s
    background: $black
    position: absolute
    top: 0
    left: 0
    width: 40px
    height: 50px
    color: #ddd
    text-align: center
    line-height: 50px
    font-size: 20px

    &:before
      margin-top: 15px

  &:hover
    .icon
      color #fff

  .context
    color: #fff
    margin-left: 32px
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis

.sync-indicator
  position: relative
  display inline-block
  padding-left 28px

.sync-indicator .icon
  position absolute
  left 10px

#package-list
  .list-group-item
    padding-left: 50px

    &.processing .icon,
    &.active.processing .icon
      width auto
      height auto
      border-radius 0
      border none
      position absolute
      top 12px
      left 14px
      transform-origin 50% 50%
      animation spin 1s infinite linear
      font-size 25px
      color #FFBD2E

      &:before
        content '\e891'
        position relative
        display inline-block
        font-family "photon-entypo"
        speak none
        font-size 100%
        font-style normal
        font-weight normal
        font-variant normal
        text-transform none
        line-height 1
        -webkit-font-smoothing antialiased

.list-group-item .icon
  position absolute
  top 22px
  left 14px
  width 20px
  height 20px
  border-radius 10px
  border 2px solid $blue

.list-group-item.active .icon
  border 2px solid $green

.list-group-item.innactive .icon
  border 2px solid #ccc

::-webkit-scrollbar {
  width: 6px;
}

/* Track */
::-webkit-scrollbar-track {
  border-radius: 6px;
  width: 12px;
  background #000
}

/* Handle */
::-webkit-scrollbar-thumb {
  border-radius: 6px;
  background: #eee;
}
::-webkit-scrollbar-thumb:window-inactive {
  background: rgba(255,0,0,0.4);
}